@model ShoppingCart
<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>cart</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">cart</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="cart-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <table class="table cart-table table-responsive-xs">
                    <thead>
                        <tr class="table-head">
                            <th scope="col">image</th>
                            <th scope="col">product name</th>
                            <th scope="col">price</th>
                            <th scope="col">quantity</th>
                            <th scope="col">action</th>
                            <th scope="col">total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.lstItems)
                        {
                            <tr>
                                <td>
                                    <a href="#"><img src="~/Uploads/Items/@item.ImageName" alt=""></a>
                                </td>
                                <td>
                                    <a href="#">@item.ItemName</a>
                                    <div class="mobile-cart-content row">
                                        <div class="col-xs-3">
                                            <div class="qty-box">
                                                <div class="input-group">
                                                    <input type="text" name="quantity" class="form-control input-number qty"
                                                           value="1">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-3">
                                            <h2 class="td-color">$63.00</h2>
                                        </div>
                                        <div class="col-xs-3">
                                            <h2 class="td-color">
                                                <a href="#" class="icon"><i class="ti-close"></i></a>
                                            </h2>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h2>$@item.Price</h2>
                                </td>
                                <td>
                                    <div class="qty-box">
                                        <div class="input-group">
                                            <input type="number" name="quantity"
                                                   class="form-control input-number qty"
                                                   data-id="@item.ItemId" data-price="@item.Price"
                                                   value="@item.Qty" onchange="ChangeQty(this)">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="javascript:void(0)"
                                       class="icon text-danger"
                                       onclick="removeItem(@item.ItemId)">
                                        <i class="ti-close"></i>
                                    </a>
                                </td>
                                <td>
                                    <h2 data-id="@item.ItemId" class="td-color totalPrice">@item.Total</h2>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <table class="table cart-table table-responsive-md">
                    <tfoot>
                        <tr>
                            <td>total price :</td>
                            <td>
                                <h2 id="OverAllTotal">$@Model.Total</h2>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row cart-buttons">
            <div class="col-6"><a href="/Home/Index" class="btn btn-solid">continue shopping</a></div>
            <div class="col-6"><a href="/Order/OrderSuccess" class="btn btn-solid">check out</a></div>
        </div>
    </div>
</section>
<!--section end-->
@section Scripts
    {

    <script>
        function ChangeQty(input) {
            let id = $(input).data("id");
            let price = parseFloat($(input).data("price"));
            let qty = parseInt($(input).val()) || 0;

            $.ajax({
                url: '/Order/UpdateItemQuantity',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    itemId: id,
                    qty: qty
                }),
                success: function (response) {

                    // update item total
                    $(`.totalPrice[data-id='${id}']`)
                        .text(response.itemTotal.toFixed(2));

                    // update cart total
                    $("#OverAllTotal")
                        .text(`$${response.cartTotal.toFixed(2)}`);
                },
                error: function () {
                    alert("Failed to update quantity");
                }
            });
        }
    </script>

    <script>
        function removeItem(itemId) {
            if (!confirm("Remove this item from cart?")) return;

            $.ajax({
                url: '/Order/RemoveItem',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ itemId: itemId }),
                success: function (response) {

                    // remove row
                    $(`.totalPrice[data-id='${itemId}']`)
                        .closest("tr")
                        .fadeOut(300, function () {
                            $(this).remove();
                        });

                    // redirect if cart empty
                    if (response.redirect) {
                        window.location.href = response.redirectUrl;
                        return;
                    }

                    // update total
                    $("#OverAllTotal")
                        .text(`$${response.cartTotal.toFixed(2)}`);
                },
                error: function () {
                    alert("Failed to remove item");
                }
            });
        }
    </script>


}
